<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/article_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_height"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/liked_image"
        android:layout_width="@dimen/action_image_dimen"
        android:layout_height="@dimen/action_image_dimen"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/spacing"
        android:layout_marginTop="@dimen/spacing"
        android:src="@drawable/like" />

    <ImageView
        android:layout_width="@dimen/action_image_dimen"
        android:layout_height="@dimen/action_image_dimen"
        android:layout_marginStart="@dimen/spacing"
        android:layout_marginTop="@dimen/spacing"
        android:src="@drawable/save" />

    <TextView
        android:id="@+id/likes_count"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/action_image_dimen"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="@dimen/spacing"
        android:layout_toStartOf="@+id/liked_image"
        android:gravity="center"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/article_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/article_image"
        android:layout_marginStart="@dimen/spacing"
        android:layout_marginTop="@dimen/spacing"
        android:textColor="@color/purple"
        android:textSize="@dimen/text_size_category" />

    <TextView
        android:id="@+id/articles_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/article_category"
        android:layout_marginEnd="@dimen/spacing"
        android:layout_marginStart="@dimen/spacing"
        android:layout_marginTop="@dimen/spacing"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_title"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/writer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/articles_title"
        android:layout_marginStart="@dimen/spacing"
        android:layout_marginTop="@dimen/spacing"
        android:layout_toEndOf="@id/author_image"
        android:textColor="@color/purple"
        android:textSize="@dimen/text_size_writer" />

    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/writer"
        android:layout_marginStart="@dimen/spacing"
        android:layout_toEndOf="@id/author_image"
        android:text="12/1/2442"
        android:textSize="@dimen/text_size_writer" />

    <ImageView
        android:id="@+id/author_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/articles_title"
        android:layout_marginStart="@dimen/spacing"
        android:layout_marginTop="@dimen/spacing" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing"
        android:layout_below="@id/date"
        android:layout_marginTop="@dimen/spacing"
        android:background="@color/grey" />


</RelativeLayout>